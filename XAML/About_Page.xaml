<Page
    x:Class="SimpleTaskTracker.XAML.About_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimpleTaskTracker.XAML"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About_Page"
    Width="668"
    Height="488"
    Margin="0"
    HorizontalAlignment="Center"
    VerticalAlignment="Top"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*" />
            <RowDefinition Height="14*" />
            <RowDefinition Height="66*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="285*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="231*" />
            <ColumnDefinition Width="232*" />
            <ColumnDefinition Width="205*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Name="Titfle"
            Grid.Row="2"
            Width="205"
            Height="25"
            Margin="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="/SimpleTaskTracker;component/Fonts/#Lucida Sans Unicode"
            FontSize="18"
            Foreground="#FF444444"
            Text="Simple Task Tracker"
            TextWrapping="Wrap" />

        <TextBlock
            x:Name="Version"
            Grid.Row="2"
            Width="67"
            Height="18"
            Margin="0,25,0,0"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="/SimpleTaskTracker;component/Fonts/#Lucida Sans Unicode"
            Foreground="#FF444444"
            Text="Version 1.1"
            TextWrapping="Wrap" />
        <TextBlock
            x:Name="Copyright"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Width="248"
            Height="18"
            Margin="0,44,0,0"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="/SimpleTaskTracker;component/Fonts/#Lucida Sans Unicode"
            Foreground="#FF444444"
            Text="© 2018 Marcus Beaty. All Rights Reserved."
            TextWrapping="Wrap" />

        <Image
            Name="helpImg"
            Grid.Row="3"
            Width="20"
            Margin="0,4,0,14"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Panel.ZIndex="1"
            MouseUp="Help_Btn_Click"
            Source="/SimpleTaskTracker;component/Graphics/icons8-help-50.png" />
        <TextBlock
            Name="helpTxt"
            Grid.Row="3"
            Width="50"
            Margin="20,1,161,9"
            Padding="3,0,0,0"
            VerticalAlignment="Center"
            FontFamily="/SimpleTaskTracker;component/Fonts/#Lucida Sans Unicode"
            FontSize="18"
            Foreground="#FF196EB2"
            MouseUp="Help_Btn_Click"><Run Text="Help" /></TextBlock>

        <Button
            x:Name="Donate_Btn"
            Grid.Row="4"
            Margin="0,0,50,0"
            Padding="1"
            HorizontalContentAlignment="Left"
            Background="#FF1E434F"
            BorderBrush="#FF1E434F"
            Click="Donate_Btn_Click"
            FlowDirection="RightToLeft"
            FontFamily="/SimpleTaskTracker;component/Fonts/#Century Gothic"
            FontSize="15"
            Foreground="White">
            <StackPanel
                Width="178"
                Margin="0"
                FlowDirection="LeftToRight"
                Orientation="Horizontal">
                <Image
                    Width="25"
                    Height="25"
                    Margin="10,3,3,7"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Panel.ZIndex="1"
                    Source="/SimpleTaskTracker;component/Graphics/icons8-cafe-100.png" />

                <TextBlock
                    Width="145"
                    Padding="3,0,0,0"
                    VerticalAlignment="Center"><Run Text="Buy Me a Coffee" /></TextBlock>

            </StackPanel>
        </Button>
    </Grid>
</Page>
